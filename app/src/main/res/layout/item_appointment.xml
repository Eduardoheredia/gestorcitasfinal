<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cita Taller #1"/>

        <TextView
            android:id="@+id/tv_medico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mecanico 1"/>

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atencio el dia 12/05/2023"/>

        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A las 9:30 AM"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Confirmada"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/id_expand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_expand_more_"
                android:layout_gravity="end"
                android:background="@color/white"
                tools:src="@drawable/ic_expand_less"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linear_layout_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_especialidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprobaciones y escaner"/>
            <TextView
                android:id="@+id/tv_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motor"/>
            <TextView
                android:id="@+id/tv_creado_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La cita se registro el dia 28/10/2023 con las siguientes fallas:"/>
            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="falla de inyectores"/>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>